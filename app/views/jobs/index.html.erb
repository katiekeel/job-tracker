<h4><%= link_to "Back to All Companies", companies_path %></h4>

<h3>All Jobs for <strong><%= @company.name %></strong></h3>

<h4><%= link_to "Create A New Job for #{@company.name}", new_company_job_path %></h4>
<h4><%= link_to "Edit #{@company.name}", edit_company_path(@company) %></h4>

<% @jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(@company, job) %></ul>
<% end %>
