<h4><%= link_to "Back to All Categories", categories_path %></h4>

<h3>All Jobs for <strong><%= @category.title %></strong></h3>

<h4><%= link_to "Edit Category", edit_category_path(@category) %>  |  <%= link_to "Delete Category", category_path(@category), method: :delete %></h4>

<% @category.jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(job.company, job) %></ul>
<% end %>
